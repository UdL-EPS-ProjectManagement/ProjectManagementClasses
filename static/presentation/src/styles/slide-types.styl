section.title
  justify-content flex-end
  align-items flex-end
  h1
    font-size 2.5em
    margin 0 0% 15% 30%
    text-shadow 0 1px 5px rgba(0,0,0,.15)
    font-weight 700
    color #5A3DC4
  footer
    display none

section.speaker
  background-color white
  color white
  font-family Vollkorn, sans-serif
  header
    background-color #5A3DC4
    position absolute
    top 290px
    left 42%
    width 65%
    height 110px
    padding-left 60px
    display flex
    flex-direction column
    justify-content center
    h2, h3
      font-weight 400
      margin 0
    h2
      color lightgrey
      font-size 35px
      line-height 1.05
      margin-top 0.1em
      margin-left 2.50em
    h3
      font-size 19px
      line-height 1.1
      margin-left 4.85em
  figure.headshot
    position absolute
    top 90px
    left 75px
    width 500px
    height 500px
    border-radius 250px
    overflow hidden
    box-shadow 0 0 0 5px #5A3DC4
    img
      object-fit cover
      width 100%
      height 100%
  .contact
    color #5A3DC4
    position absolute
    top 415px
    left 700px
    font-size 21px
    word-spacing 0.25em
    line-height 1.2
    white-space nowrap
    margin-top 1em

slide.agenda
  background-color #5A3DC4
  background-size cover

ul
  padding-left 0
  margin-left 1.5ex

  &.agenda
    height 0
    font-family Dosis, sans-serif
    font-weight 600
    display flex
    flex-direction column
    justify-content flex-end
    font-size 1.5em
    border-left 0.15em solid #5A3DC4
    margin 0
    position absolute
    top 0
    right 0
    padding 0 0.5em 0 0
    & li
      opacity 0
      list-style none
      line-height 1.5
      margin 0
      padding 0.25em 0 0.5em 0
      text-transform uppercase
      color #971730
      vertical-align middle
      &::before
        line-height 1
        content ''
        display inline-block
        background-color #971730
        width 1.5em
        height 1.5em
        border-radius 3em
        margin-right 1ex
        vertical-align middle
        margin-left -0.8325em

        margin-top -0.2em

.bespoke-active ul.agenda
  transition height 3s ease 1s
  height 100%
  li.bespoke-bullet-active
    opacity 1
    &:first-of-type
      transition opacity 0.8s ease 4s

.bespoke-slide.slide-agenda-title
  background-color #324768
  h2
    color white
.bespoke-slide.slide-title-down
  h2
    color: white
    background-color #00897b
    width 600px
    height 80px
    padding-left 30px
    margin-top 10 em
    margin-left 17.50em
    display flex
    flex-direction column
    justify-content center

.bespoke-slide.presentation-bugs
  background-color: #0f0d0c
  align-items: flex-end
  img
    max-height: 25%
    display: block
    position: absolute
    top: 40%
    right: 0

.bespoke-slide.presentation-bugs.bespoke-active img
    max-height: 55%
    transition: max-height ease-in-out 0.45s 0.45s

.bespoke-slide.img-shadow
  img
    box-shadow 0 1px 5px rgba(0,0,0,.15)

.bespoke-slide.grey-color
  p
    color:lightgrey

.bespoke-slide.ending-slide
  h2
    color: white
    font-weight: bold;